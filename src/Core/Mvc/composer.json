{
    "name": "core/mvc",
    "description": "lepo/core - Model View Controller for PHP 8",
    "type": "library",
    "license": "MIT",
    "version": "0.1.0",
    "keywords": [
        "lepo",
        "core",
        "asp.net",
        "mvc",
        "model",
        "view",
        "controller",
        "net",
        "service",
        "package"
    ],
    "autoload": {
        "psr-4": {
            "Lepo\\Core\\Mvc\\": ""
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "authors": [
        {
            "name": "Leszek Pomianowski"
        },
        {
            "name": "lepo/core Community",
            "homepage": "https://github.com/lepoco/core"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.2",
        "core/dependency-injection": "^0.1.0",
        "core/hosting": ">^0.1.0",
        "core/routing": ">^0.1.0",
        "symfony/http-foundation": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
